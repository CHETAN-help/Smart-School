FROM node:16

# Create app directory
WORKDIR /app

# Copy package.json and package-lock.json
COPY package*.json ./

# Install app dependencies
RUN npm install

# Copy the app source code
COPY . .

# Expose the port (4000 for backend)
EXPOSE 4000

# Build the app if necessary (e.g., for TypeScript or build step)
# RUN npm run build

# Start the application
CMD ["npm", "start"]
